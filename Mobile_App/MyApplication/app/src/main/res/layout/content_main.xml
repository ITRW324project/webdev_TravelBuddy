<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="travel_buddyapp.travelbuddyapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/mainscreen"
    >

    <TextView
        android:id="@+id/Main_Text_1"
        android:layout_width="221dp"
        android:layout_height="45dp"
        android:text="Welcome to"
        android:textSize="40sp"
        android:textColor="#f7f7f9"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/Main_Text_2"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/Main_Text_2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="53dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Main_Text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Buddy"
        android:textSize="50sp"
        android:textColor="#f7f7f9"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="71dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bSignup_Link"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="#4a90e2"
        android:text="Sign Up"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/bLogin_Link"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/bLogin_Link"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/bLogin_Link"
        android:layout_width="224dp"
        android:layout_height="55dp"
        android:background="#4a90e2"
        android:text="Login"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/bSignup_Link"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/Main_Text_3"
        android:layout_width="295dp"
        android:layout_height="143dp"
        android:text="Explore Destinations around the world.  View your travel books and add Destinations."
        android:textSize="25sp"
        android:textColor="#f7f7f9"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Main_Text_2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.64" />

</android.support.constraint.ConstraintLayout>
