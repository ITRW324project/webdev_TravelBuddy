<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="travel_buddyapp.travelbuddyapp.WelcomeActivity"
    android:background="@drawable/welcomeimage"
    >

    <TextView
        android:id="@+id/Main_Text_1"
        android:layout_width="341dp"
        android:layout_height="0dp"
        android:text="Welcome to"
        android:textSize="40sp"
        android:textColor="#f7f7f9"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/Main_Text_2"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/Main_Text_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Main_Text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Buddy"
        android:textSize="50sp"
        android:textColor="#f7f7f9"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="71dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Main_Text_3"
        android:layout_width="0dp"
        android:layout_height="143dp"
        android:text="What do you want to do?"
        android:textSize="25sp"
        android:textColor="#f7f7f9"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/Main_Text_2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp" />

    <Button
        android:id="@+id/bSearch_Welcome"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="#4a90e2"
        android:text="Search Destinations"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="33dp"
        app:layout_constraintBottom_toBottomOf="@+id/Travelbook_Button"
        android:layout_marginEnd="33dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="78dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="82dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Main_Text_3"
        app:layout_constraintVertical_bias="0.25"
        android:onClick="findPlace"/>

    <Button
        android:id="@+id/bAllTravelBooks"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="13dp"
        android:background="#4a90e2"
        android:onClick="findPlace"
        android:text="View All TravelBooks"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Travelbook_Button"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/Travelbook_Button"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="#5cb85c"
        android:text="View my Travelbook"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/Main_Text_3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/searched_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="176dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/Travelbook_Button" />

</android.support.constraint.ConstraintLayout>
