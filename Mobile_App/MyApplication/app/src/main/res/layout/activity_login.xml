<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="travel_buddyapp.travelbuddyapp.LoginAct"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/gradient_blue2">

    <Button
        android:id="@+id/login_button"
        android:layout_width="265dp"
        android:layout_height="48dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="47dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="17dp"
        android:background="#5cb85c"
        android:textColor="#f7f7f9"
        android:text="Login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_text" />

    <EditText
        android:id="@+id/username_text"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="7dp"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toRightOf="@+id/back_button"
        app:layout_constraintTop_toBottomOf="@+id/username_label" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="9dp"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/username_text"
        app:layout_constraintTop_toBottomOf="@+id/password_label"
        />

    <TextView
        android:id="@+id/login_label"
        android:layout_width="124dp"
        android:layout_height="65dp"
        android:text="Login"
        android:textColor="#f7f7f9"
        android:textSize="50sp"
        android:layout_marginStart="51dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="73dp" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="68dp"
        android:layout_height="41dp"
        android:text="Back"
        android:textColor="#f7f7f9"
        android:background="@null"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/username_label"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f9"
        android:text="Username:"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="153dp"
        android:layout_marginLeft="87dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/password_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f9"
        android:text="Password:"
        android:textSize="24sp"
        android:layout_marginLeft="87dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/username_text" />

    <Button
        android:id="@+id/forgot_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:textStyle="italic"
        android:text="Forgot your password?"
        android:textColor="#f7f7f9"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

</android.support.constraint.ConstraintLayout>
