<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue2"
    tools:context="travel_buddyapp.travelbuddyapp.SignUpActivity">


    <EditText
        android:id="@+id/Name_editText"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/Email_editText2"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/Password_editText3"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/ConPassword_editText4"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#f7f7f9"
        android:textSize="50sp"
        android:layout_marginLeft="106dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textSize="20sp"
        android:textColor="#f7f7f9"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/Back_button2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20sp"
        android:textColor="#f7f7f9"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/Back_button2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Name_editText" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textSize="20sp"
        android:textColor="#f7f7f9"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/Email_editText2"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/Back_button2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password:"
        android:textSize="20sp"
        android:textColor="#f7f7f9"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Password_editText3"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/Sign_Up_button"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:text="Sign Up"
        android:textSize="20sp"
        android:background="#5cb85c"
        android:textColor="#f7f7f9"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/ConPassword_editText4"
        android:layout_marginLeft="47dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="442dp"
        tools:layout_editor_absoluteX="47dp" />

    <Button
        android:id="@+id/Back_button2"
        android:layout_width="83dp"
        android:layout_height="42dp"
        android:text="Back"
        tools:layout_editor_absoluteX="0dp"
        android:textColor="#f7f7f9"
        android:background="@null"
        tools:layout_editor_absoluteY="0dp" />
</android.support.constraint.ConstraintLayout>
