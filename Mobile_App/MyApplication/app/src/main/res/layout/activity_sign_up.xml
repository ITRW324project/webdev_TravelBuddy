<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue2"
    tools:context="travel_buddyapp.travelbuddyapp.SignUpActivity">

    <Button
        android:id="@+id/bBack_Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        tools:layout_editor_absoluteX="0dp"
        android:textColor="#f7f7f9"
        android:background="@null"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/etUsername_Signup"
        android:layout_width="351dp"
        android:layout_height="40dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        app:layout_constraintTop_toBottomOf="@+id/username_text" />

    <EditText
        android:id="@+id/etEmail_Signup"
        android:layout_width="351dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-9dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        app:layout_constraintTop_toBottomOf="@+id/email_text" />

    <EditText
        android:id="@+id/etpassword_Signup"
        android:layout_width="351dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        app:layout_constraintTop_toBottomOf="@+id/password_text" />

    <EditText
        android:id="@+id/etpassword2__Signup"
        android:layout_width="351dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-2dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        app:layout_constraintTop_toBottomOf="@+id/confirmpassword_text" />

    <Button
        android:id="@+id/bSignUp"
        android:layout_width="221dp"
        android:layout_height="48dp"
        android:text="Sign Up"
        android:textSize="20sp"
        android:background="#5cb85c"
        android:textColor="#f7f7f9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/etFirstName_Signup"
        android:layout_width="189dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        app:layout_constraintTop_toBottomOf="@+id/firstname_text" />

    <EditText
        android:id="@+id/etTown_Signup"
        android:layout_width="189dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-3dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        app:layout_constraintTop_toBottomOf="@+id/Town_text" />

    <EditText
        android:id="@+id/etLastName_Signup"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/etFirstName_Signup"
        app:layout_constraintTop_toBottomOf="@+id/lastname_text" />

    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="169dp"
        android:layout_height="73dp"
        android:fontFamily="sans-serif"
        android:text="Signup"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etNumber_Signup"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/etTown_Signup"
        app:layout_constraintTop_toBottomOf="@+id/number_text" />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textColor="#f7f7f9"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/etFirstName_Signup" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textColor="#f7f7f9"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail_Signup"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/firstname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name:"
        android:textColor="#f7f7f9"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        app:layout_constraintTop_toBottomOf="@+id/tvSignup"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/lastname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        android:textColor="#f7f7f9"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/firstname_text"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSignup" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="#f7f7f9"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/etUsername_Signup" />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number:"
        android:textColor="#f7f7f9"
        android:textSize="24sp"
        android:layout_marginTop="-12dp"
        app:layout_constraintTop_toBottomOf="@+id/etpassword2__Signup"
        app:layout_constraintLeft_toRightOf="@+id/Town_text"
        android:layout_marginLeft="148dp" />

    <TextView
        android:id="@+id/confirmpassword_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password:"
        android:textColor="#f7f7f9"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        app:layout_constraintTop_toBottomOf="@+id/etpassword_Signup"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/Town_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Town:"
        android:textColor="#f7f7f9"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Signup"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/etpassword2__Signup"
        android:layout_marginLeft="16dp" />

</android.support.constraint.ConstraintLayout>
