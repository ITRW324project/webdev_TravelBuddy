<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue2"
    tools:context="travel_buddyapp.travelbuddyapp.ResetPass_Activity">

    <Button
        android:id="@+id/bBack_ResetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#f7f7f9"
        android:background="@null"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-4dp" />

    <Button
        android:id="@+id/Send_ResetPass"
        android:layout_width="341dp"
        android:layout_height="54dp"
        android:text="Submit"
        android:textColor="#f7f7f9"
        android:background="#5cb85c"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etemail_resetPass"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f9"
        android:text="Enter Email:"
        android:textSize="24sp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_ResetPass"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/etemail_resetPass"
        android:layout_width="289dp"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="39dp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_ResetPass"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="50sp"
        android:textColor="#f7f7f9"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_ResetPass"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79dp" />

</android.support.constraint.ConstraintLayout>
