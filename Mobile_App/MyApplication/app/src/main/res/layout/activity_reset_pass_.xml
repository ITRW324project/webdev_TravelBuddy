<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue"
    tools:context="travel_buddyapp.travelbuddyapp.ResetPass_Activity">

    <Button
        android:id="@+id/Back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#f7f7f9"
        android:background="@null"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-4dp" />

    <Button
        android:id="@+id/Send_button2"
        android:layout_width="184dp"
        android:layout_height="50dp"
        android:text="Send me Instractions"
        android:textColor="#f7f7f9"
        android:background="#5cb85c"
        tools:layout_editor_absoluteY="338dp"
        tools:layout_editor_absoluteX="88dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f9"
        android:text="Enter Email for password reset:"
        tools:layout_editor_absoluteY="165dp"
        tools:layout_editor_absoluteX="82dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteY="234dp"
        tools:layout_editor_absoluteX="72dp" />

</android.support.constraint.ConstraintLayout>
