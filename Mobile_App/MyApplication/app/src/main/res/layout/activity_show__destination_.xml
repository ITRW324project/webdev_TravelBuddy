<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="travel_buddyapp.travelbuddyapp.Show_Destination_Activity"
    android:background="@drawable/gradient_blue2">

    <Button
        android:id="@+id/bBack_Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        tools:layout_editor_absoluteX="-9dp"
        android:textColor="#f7f7f9"
        android:background="@null"
        tools:layout_editor_absoluteY="4dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="431dp"
        android:layout_height="396dp"
        app:srcCompat="@drawable/paris_map"
        tools:layout_editor_absoluteX="-10dp"
        app:layout_constraintTop_toTopOf="@+id/button3"
        android:layout_marginTop="-7dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paris"
        android:textSize="50dp"
        android:background="@null"
        android:textColor="#f7f7f9"
        android:layout_marginLeft="143dp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Destination"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paris, France's capital, is a major European city and a global center for art, fashion, gastronomy and culture."
        android:textSize="16dp"
        android:background="@null"
        android:textColor="#f7f7f9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Destination" />

    <ImageButton
        android:id="@+id/attractions"
        android:layout_width="300px"
        android:layout_height="300px"
        app:srcCompat="@drawable/attractions2"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Destination"
        app:layout_constraintBottom_toBottomOf="@+id/gallery"
        android:layout_marginBottom="62dp" />

    <ImageButton
        android:id="@+id/restaurants"
        android:layout_width="300px"
        android:layout_height="300px"
        app:srcCompat="@drawable/restaurant2"
        android:layout_marginLeft="156dp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Destination"
        app:layout_constraintBottom_toBottomOf="@+id/gallery"
        android:layout_marginBottom="61dp" />

    <ImageButton
        android:id="@+id/accomodation"
        android:layout_width="300px"
        android:layout_height="300px"
        app:srcCompat="@drawable/accommodation"
        android:layout_marginLeft="282dp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Destination"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="79dp" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="379dp"
        android:layout_height="53dp"
        android:text="Gallery"
        android:background="#5cb85c"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/bBack_Destination"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/accomodation" />


</android.support.constraint.ConstraintLayout>
